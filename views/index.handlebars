<h1>Burgers!</h1>

<h2>Burgers I have devoured!</h2>

<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devoured</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers I plan to devour!</h2>

<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Working on it</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">burger name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured</label><br>
    <input type="radio" name="devoured" value="0" checked> Eaten!<br>
    <input type="radio" name="devoured" value="1"> Plan to Eat
  </div>

  <button type="submit">Add Burger</button>
</form>
